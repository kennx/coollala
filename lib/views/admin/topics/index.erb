<script type="text/javascript">
  $(document).ready(function () {
    $(".destroy").click(function () {
      f = $('#destroy_form')
      if (!f.length) {
        $('body').append("<form id='destroy_form' method='post' action='" + $(this).attr('href') + "'>" + "<%= hidden_field_tag :delete %></form>");
        if (confirm("确认删除？")) {
          $('#destroy_form').submit();
        }
        $('#destroy_form').remove()
      }
      return false;
    })
  })
</script>
<% @topics.each do |topic| %>
  <div class="media">
    <div class="row-fluid">
      <div class="span9">
        <div class="media-body">
          <h4 class="media-heading"><a href="/admin/topic/<%= topic.id %>"><%= topic.title %></a>
            <small><%= chn_time_format(topic.created_at) %></small>
          </h4>
        </div>
      </div>
      <div class="pull-right">
        <a class="btn btn-mini" href="/admin/topic/<%= topic.id %>/edit/">编辑</a>
        <a class="btn btn-danger btn-mini destroy" href="/admin/topic/<%= topic.id %>/delete">删除</a>
      </div>
    </div>
  </div>
<% end %>