<form action="/admin/topic/<%= @topic.id %>/update" method="post" class="form-horizontal">
  <%= hidden_field_tag :put %>
  <div class="control-group">
    <label class="control-label" for="inputName">标题：</label>
    <div class="controls">
      <input type="text" name="topic[title]" id="inputName" value="<%= @topic.title %>" />
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputBody">内容：</label>
    <div class="controls">
      <textarea name="topic[body]" id="inputBody" rows="20" class="span8"><%= @topic.body %></textarea>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputGroupId">小组ID：</label>
    <div class="controls">
      <select name="topic[group_id]" id="inputGroupId">
        <% Group.all.each do |group| %>
          <option value="<%= group.id %>" <%= "selected='selected'" if group.id == @topic.group_id %>><%= group.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputUserId">用户ID：</label>
    <div class="controls">
      <select name="topic[user_id]" id="inputUserId">
        <% User.all.each do |user| %>
          <option value="<%= user.id %>" <%= "selected='selected'" if user.id == @topic.user_id %>><%= user.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
  </div>
</form>