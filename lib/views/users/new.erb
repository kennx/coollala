<script type="text/javascript">
    $(document).ready(function () {
        $("#avatars_option").change(function () {
            $("#avatar_tag").attr('src', '/assets/images/avatars/' + this.value)
        })
    })
</script>


<form action="/admin/user/create" method="post" class="form-horizontal">
  <div class="control-group">
    <label class="control-label">头像预览：</label>

    <div class="controls">
      <img id="avatar_tag" src="/assets/images/avatars/default.gif">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputAvatar">选择头像：</label>

    <div class="controls">
      <select name="user[avatar]" id="avatars_option">
        <option value="default.gif">default</option>
        <% Dir.glob(settings.root + settings.avatar_directory + "avatar_*.gif").each do |avatar| %>
            <option value="<%= File.basename(avatar) %>"><%= File.basename(avatar).gsub(/\.gif/, '') %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputName">用户名：</label>

    <div class="controls">
      <input type="text" name="user[name]" id="inputName" placeholder="输入用户名">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputEmail">email：</label>

    <div class="controls">
      <input type="text" name="user[email]" id="inputEmail" placeholder="输入email">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputPassword">密码</label>

    <div class="controls">
      <input type="password" name="user[password]" id="inputPassword" placeholder="输入">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputPasswordConfirmation">确认密码</label>

    <div class="controls">
      <input type="password" name="user[password_confirmation]" id="inputPasswordConfirmation" placeholder="确认密码">
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
  </div>
</form>