<div class="topics">
  <ul>
    <% @topics.each do |topic| %>
    <li class="clearfix">
      <a href="/<%= topic.group.slug %>/<%= topic.id %>" class="title"><%= topic.title %></a>
      <div class="info">
        <span class="pull-right"><a href=""><%= topic.user.name %></a> 回复了这个话题</span>
        <span><%= avatar_tag(topic.user, "avatar") %><a href="/user/<%= topic.user_id %>"><%= topic.user.name %></a>  <%= chn_time_format(topic.created_at) %> 发布在 <%= topic.group.name %></span>
      </div>
    </li>
    <% end %>
  </ul>
</div>