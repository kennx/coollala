<div class="topic-content">
  <div class="topic-head">
    <h1><%= @topic.title %></h1>
  </div>
  <div class="author-info">
    <%= avatar_tag(@topic.user) %> <a href="/user/<%= @topic.user_id %>"><%= @topic.user.name %></a> <br> 在 <%= @topic.created_at %> 发布
  </div>
  <div class="topic-body">
    <%= auto_format @topic.body %>
  </div>
</div>


<div class="replies-content clearfix">
  <%= render_partial "replies/replies", :locals => {:replies => @topic.replies} %>
</div>

<% if sign_in? %>
<div class="">
  <form action="/topic/<%= @topic.id %>/reply/create" method="post">
    <input type="text" name="reply[title]" /><br>
    <textarea name="reply[body]" cols="30" rows="10"></textarea><br>
    <button type="submit">Submit</button>
  </form>
</div>
<% end %>