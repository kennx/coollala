<div class="head">
  <h3>创建话题</h3>
</div>
<div class="create-group">
  <form action="/group/<%= @group.slug %>/create_topic" method="post" class="horizontal">
    <div class="field-row clearfix">
      <label class="label" for="inputTitle"><sup>*</sup> 主题：</label>

      <div class="field-input-text">
        <input type="text" name="topic[title]" id="inputTitle" />
      </div>
    </div>
    <div class="field-row clearfix">
      <label class="label" for="inputBody">正文：</label>
      <div class="field-textarea">
        <textarea name="topic[body]" id="inputBody" rows="5"></textarea>
      </div>
    </div>
    <div class="field-row clearfix">
      <div class="action">
        <button type="submit" class="button">发布</button>
      </div>
    </div>
  </form>
</div>